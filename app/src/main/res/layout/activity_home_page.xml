<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HomePage">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/roundedImageView"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_oval="true" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerUser"
        android:layout_width="409dp"
        android:layout_height="467dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toTopOf="@+id/button_roomChat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roomID" />
    <EditText
        android:id="@+id/roomID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Room ID"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@+id/roundedImageView"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="-16dp" />

    <Button
        android:id="@+id/button_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="logout"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button_roomChat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:text="enter room"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="logout"
        tools:ignore="MissingConstraints" />


    <Button
        android:id="@+id/button_crud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="crud test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_doctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="doctor crud"
        app:layout_constraintBottom_toTopOf="@+id/button_crud"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_patient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="patient crud"
        app:layout_constraintBottom_toTopOf="@+id/button_doctor"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALL"
        app:layout_constraintBottom_toTopOf="@+id/button_logout"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>